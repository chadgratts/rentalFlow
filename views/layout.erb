<html lang="en-US">
  <head>
    <title>Apartment Rental Manager App</title>
  </head>
  <body>
    <header>
      <h1>Apartment Rental Manager</h1>
      <%== yield_content :header_links %>
    </header>

    <% if session[:success] %>
      <div class="flash success">
        <p><%= session.delete(:success) %></p>
      </div>
    <% end %>

    <% if session[:error] %>
      <div class="flash error">
        <p><%= session.delete(:error) %></p>
      </div>
    <% end %>

    <main>
      <%== yield %>
    </main>
  </body>
</html>